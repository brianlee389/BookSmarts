# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Login
GET     /							controllers.LoginController.index()

GET     /signup                  	controllers.LoginController.signup()

# Home page
GET     /index						controllers.Application.index()

GET     /dashboard                  controllers.Application.dashboard()

GET     /search						controllers.Application.search()

POST    /student                    controllers.Application.addStudent()

GET     /students                   controllers.Application.getStudents()

GET     /studentsTable              controllers.Application.studTab()

POST    /terms                      controllers.Application.addTerms()

GET		/termsTables                controllers.Application.termTab()

GET     /qs/:minGPA                 controllers.Application.queryGPA(minGPA: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)